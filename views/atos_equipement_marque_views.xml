<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="atos_equipement_marque_action" model="ir.actions.act_window">
            <field name="name">Marques</field>
            <field name="res_model">atos_equipement_marque</field>
            <field name="view_mode">tree,form,kanban</field>
    </record>

    <!--tree view -->
    <record id="atos_equipement_marque_view_tree" model="ir.ui.view">
            <field name="name">Liste marques Equipements Atos</field>
            <field name="model">atos_equipement_marque</field>
            <field name="arch" type="xml">
                <tree string="Liste">
                    <field name="name"/>
                </tree>
            </field>
    </record>

    <!--form view -->
    <record id="atos_equipement_marque_view_form" model="ir.ui.view">
            <field name="name">Form marques Equipements Atos</field>
            <field name="model">atos_equipement_marque</field>
            <field name="arch" type="xml">
                <form string="Formulaire marque">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nom de la marque"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Equipements">
                                <field name="equipement_ids" class="oe_read_only">
                                    <tree>
                                        <field name="name"/>
                                        <field name="part_number"/>
                                        <field name="serial_number"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                </form>
            </field>
    </record>


</odoo>